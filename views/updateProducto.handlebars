<h1 class="text-center mt-5">Actualizar producto</h1>

{{#if error}}
<h2 class="text-center mt-5">PRODUCTO NO ENCONTRADO</h2>
{{else}}

<form id="updateProducto">
    ID: <input class="form-control" type="text" value="{{producto.id}}" disabled>
    Nombre: <input class="form-control" type="text" value="{{producto.nombre}}" required>
    Descripci√≥n: <input class="form-control" type="text" value="{{producto.descripcion}}" required>
    Stock: <input class="form-control" type="text" value="{{producto.stock}}" required>
    Precio: <input class="form-control" type="number" value="{{producto.precio}}" required>
    Imagen: <input class="form-control" type="file">
    <img src="/public/imgs/{{producto.imagen}}" alt="{{this.nombre}}">
    <div>
        <button type="submit" class="btn btn-warning mt-2">Modificar</button>
    </div>
</form>


{{/if}}

<style>
    #updateProducto img{
        width: 200px;
    }
</style>

<script>
    let formulario = document.getElementById("updateProducto");

    formulario.addEventListener("submit", (event) => {
        event.preventDefault();
        console.log("Enviando datos.")
    })
</script>
